@model OnlineForum.Core.Models.Thread

@{
    Layout = "_Layout";
}

<h3>Create Thread</h3>

<form asp-action="Create" method="post" role="form" >

    <div class="form-group">   
        <label for="title" text="Title">Title</label>
        <input id="title" asp-for="Title" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="Content" class="form-control" asp-for="Content" rows="3" required></textarea>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Create" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>

</form>
